<Application x:Class="PPgram_desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:PPgram_desktop"
             StartupUri="MVVM/View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/ThemeColors.xaml"/>

                <ResourceDictionary Source="Style/UserItem.xaml"/>

                <ResourceDictionary Source="Style/Button/ButtonRegular.xaml"/>
                <ResourceDictionary Source="Style/Button/ButtonIcon.xaml"/>

                <ResourceDictionary Source="Style/Message/MessageOwn.xaml"/>
                <ResourceDictionary Source="Style/Message/MessageGroup.xaml"/>
                <ResourceDictionary Source="Style/Message/MessageUser.xaml"/>

                <ResourceDictionary Source="Style/Scrollbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">4</sys:Double>
            <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">4</sys:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
