<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="DarkAccent" Color="#202123"/>
    <SolidColorBrush x:Key="LightAccent" Color="#f7f6f6"/>
    
    <SolidColorBrush x:Key="PrimaryText" Color="#ffffff"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#8c8c8d"/>
    <SolidColorBrush x:Key="TextSelection" Color="#2a2a2a"/>
    
    <SolidColorBrush x:Key="UserHighlight" Color="#131313"/>
    <SolidColorBrush x:Key="UserSelected" Color="#2a2a2a"/>

    <SolidColorBrush x:Key="BackgroundLight" Color="#0f0f0f"/>
    <SolidColorBrush x:Key="BackgroundDark" Color="#0b0b0b"/>

    <SolidColorBrush x:Key="MessageOwn" Color="#2a2a2a"/>
    <SolidColorBrush x:Key="MessageUser" Color="#111111"/>
    <SolidColorBrush x:Key="MessageReplyOwn" Color="#3f3f3f"/>
    <SolidColorBrush x:Key="MessageReplyUser" Color="#1f1f1f"/>

    <SolidColorBrush x:Key="ButtonIdle" Color="#3a3a3a"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#434343"/>
    
    <SolidColorBrush x:Key="InputBack" Color="#131313"/>
